@using Docller.Core.Common
@using Docller.Core.Models
@using File = Docller.Core.Models.File

@model Docller.UI.Models.ShareFilesEmailViewModel
@{
    Layout = "~/Views/Mail/_EmailLayout.cshtml";
}
<table style="width:100%; font-family:'Helvetica Neue', Helvetica, Arial, sans-serif" border="0">
    <tr>
        <td>
            Hello
        </td>
    </tr>
    <tr>
        <td style="padding-top: 10px;">
            @Html.ValueFor(m=>m.SharedBy) has shared @(Model.Files.Count() == 1  ? Html.Raw(Model.Files.First().FileName) : Html.Raw(string.Format(" {0} files", Model.Files.Count()))) on Docller.
        </td>
    </tr>
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <tr>
            <td>
                <div style="font-weight: 700">Message:</div>
                @Model.Message
            </td>
        </tr>
    }
    <tr>
        <td style="padding-top: 10px; padding-bottom: 10px;">
            <strong>Shared Files</strong>
        </td>
    </tr>
    <tr>
        <td style="padding: 9px; min-height: 20px; margin-bottom: 20px; background-color: #f5f5f5; border: 1px solid #e3e3e3; -webkit-border-radius: 5px; -moz-border-radius: 5px; border-radius: 5px; -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05); -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05); box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05)">
            <ul>
                @foreach (File file in Model.Files)
                {
                    <li>@file.FileName</li>
                }
            </ul>
            <div style="width:100%; text-align: center; margin-top: 20px;">
                <!--[if mso]>
                    <v:roundrect xmlns:w="urn:schemas-microsoft-com:office:word" xmlns:v="urn:schemas-microsoft-com:vml" style="width:125px; height:25px; v-text-anchor:middle;" href="@Model.DownloadUrl" fillcolor="rgb(0, 109, 204)" strokecolor="rgb(0, 109, 204)" strokeweight="0.2pt" arcsize="0.1" o:borderbottomcolor="#e3e3e3"><v:fill type="solid" color="rgb(0, 109, 204)"></v:fill><w:anchorlock></w:anchorlock><center style="background-color: rgb(9, 109,205);color: rgb(255, 255, 255);display: block;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;font-weight: 700;text-align: center;text-decoration: underline;">Dowload Files</center></v:roundrect>
                    <div style="width:0px; height:0px; overflow:hidden; display:none; visibility:hidden; mso-hide:all;">

                <![endif]-->

                <a href="@Model.DownloadUrl" style="text-decoration: none; padding: 4px 12px; display: inline-block; margin-bottom: 0; font-size: 14px; line-height: 20px; color: #fff; text-align: center; text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25); vertical-align: middle; cursor: pointer; background-color: #006dcc; border: 1px solid #ccc; border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25); border-bottom-color: #b3b3b3; -webkit-border-radius: 4px; -moz-border-radius: 4px; border-radius: 4px; -webkit-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05); -moz-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05); box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05)">
                    Download files
                </a>
                <!--[if mso]></div><![endif]-->

            </div>  
        </td>
    </tr>
</table>